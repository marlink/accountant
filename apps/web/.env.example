# Supabase Configuration
# Get these from your Supabase project dashboard: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# KSeF (E-Invoicing) Configuration
# Required for KSeF integration. Get certificate from qualified CA.
# Base64 encode your certificate files:
# base64 -i cert.pem > cert.pem.b64
# base64 -i key.pem > key.pem.b64
KSEF_CERT_PEM_B64=
KSEF_KEY_PEM_B64=
KSEF_CERT_PASSWORD=
KSEF_API_URL=https://ksef-api.example.com
KSEF_API_SEND_PATH=/invoices

# Bank AIS Integration (Optional)
# JSON string with bank AIS provider credentials
# Example: {"provider":"tink","clientId":"...","clientSecret":"..."}
AIS_PROVIDER_KEYS=

# Email Provider (Optional)
# JSON string with email provider credentials
EMAIL_PROVIDER_KEYS=

# Job Configuration (Optional)
JOB_FAIL_THRESHOLD=0.2

# Error Tracking (Optional)
# Get DSN from https://sentry.io
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
